{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://certeus.ai/schemas/answer_contract_v1.json",
  "title": "Answer Contract v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "answer_id": {"type": "string", "format": "uuid"},
    "case_id": {"type": "string", "minLength": 1},
    "question": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "text": {"type": "string", "minLength": 1},
        "lang": {"type": "string", "minLength": 1}
      },
      "required": ["text"],
      "anyOf": [
        {"required": ["lang"]},
        {"not": {"required": ["lang"]}}
      ]
    },
    "answer": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "text": {"type": "string", "minLength": 1},
        "lang": {"type": "string", "minLength": 1},
        "hash": {"type": "string", "pattern": "^[0-9a-fA-F]{64}$"}
      },
      "required": ["text"]
    },
    "citations": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "type": {"type": "string"},
          "label": {"type": "string"},
          "ref": {"type": "string"},
          "locator": {"type": "string"}
        }
      }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "confidence": {"type": "number", "minimum": 0.0, "maximum": 1.0},
        "latency_ms": {"type": "integer", "minimum": 0}
      }
    },
    "model": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "provider": {"type": "string"},
        "name": {"type": "string"},
        "version": {"type": "string"}
      }
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "receipt_id": {"type": "string", "format": "uuid"}
      },
      "required": ["receipt_id"]
    },
    "timestamps": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "created_at": {"type": "string", "format": "date-time"}
      }
    }
  },
  "required": ["answer_id", "case_id", "question", "answer", "timestamps", "model"]
}


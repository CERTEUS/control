{
  // Enterprise Automation Settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.postCommitCommand": "push",
  "extensions.autoUpdate": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true
  },
  "security.workspace.trust.enabled": false,
  "terminal.integrated.confirmOnExit": "never",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // Spelling configuration
  "cSpell.language": "en,pl",
  "cSpell.enabledLanguageIds": [
    "markdown",
    "plaintext",
    "git-commit"
  ],
  "cSpell.diagnosticLevel": "Information",
  "cSpell.ignorePaths": [
    "internal/**",
    "**/.git/**",
    "node_modules/**",
    "dist/**",
    "build/**",
    "workspaces/**"
  ],
  "cSpell.words": [
    "repozytorium",
    "repozytoriów",
    "sekretów",
    "hooki",
    "hooków",
    "markdownlint",
    "precommit",
    "PEM",
    "JWT",
    "GH_APP",
    "INSTALLATION_ID",
    "BASE64",
    "remote-bot",
    "with-gh",
    "VSCode",
    "PowerShell",
    "certeus",
    "pyproject",
    "pylance"
  ],
  // Python configuration
  "python.defaultInterpreterPath": "F:/projekty/control/.venv/Scripts/python.exe",
  "python.terminal.activateEnvironment": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.typeCheckingMode": "basic",
  // Exclude from Python analysis to avoid conflicts
  "python.analysis.exclude": [
    "workspaces/**",
    "internal/secrets/**",
    ".venv/**",
    "__pycache__/**"
  ],
  // Multi-project workspace configuration
  "python.analysis.workspace.excludePatterns": [
    "workspaces/certeus/.venv/**",
    "workspaces/**/__pycache__/**",
    "internal/secrets/**"
  ],
  // Ruff configuration
  "ruff.path": [
    "F:/projekty/control/.venv/Scripts/ruff.exe"
  ],
  "ruff.interpreter": [
    "F:/projekty/control/.venv/Scripts/python.exe"
  ],
  // File associations and exclusions
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    ".venv": false,
    "workspaces/certeus/.venv": true,
    "workspaces/**/__pycache__": true,
    "internal/secrets": true
  },
  // Search exclusions
  "search.exclude": {
    "**/.git": true,
    "**/.venv": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "workspaces/certeus/.venv/**": true,
    "workspaces/**/__pycache__": true,
    "internal/secrets/**": true
  },
  // Watcher exclusions for performance
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.venv/**": true,
    "**/node_modules/**": true,
    "**/__pycache__/**": true,
    "workspaces/certeus/.venv/**": true,
    "workspaces/**/__pycache__/**": true,
    "internal/secrets/**": true
  },
  // Editor settings
  "editor.rulers": [
    100
  ],
  "editor.insertSpaces": true,
  "editor.tabSize": 4,
  // Git configuration
  "git.ignoreLimitWarning": true,
  // Terminal configuration
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}"
  },
  // Pylance specific settings
  "pylance.insidersChannel": "off",
  // Testing
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests"
  ],
  // Formatting
  "python.formatting.provider": "none",
  // Black Formatter configuration
  "black-formatter.interpreter": [
    "F:/projekty/control/.venv/Scripts/python.exe"
  ],
  "black-formatter.path": [
    "F:/projekty/control/.venv/Scripts/black.exe"
  ],
  "black-formatter.importStrategy": "fromEnvironment",
  "black-formatter.showNotifications": "off",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  }
}